{
	"name": "server",
	"version": "1.0.0",
	"main": "build/index.js",
	"license": "Apache-2.0",
	"scripts": {
		"build": "rimraf build && tsc",
		"start": "node build/index.js",
		"dev:caddy": "docker run --rm --name gateway-server -v $PWD/Caddyfile:/etc/caddy/Caddyfile -p 80:80 -p 443:443 --network host --env-file .env caddy:latest",
