		"node-cache": "^5.1.2"
	},
	"devDependencies": {
		"@types/jest": "^29.5.3",
		"@types/node": "^20.4.1",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.44.0",
		"jest": "^29.6.1",
		"nodemon": "^3.0.1",
		"prettier": "^3.0.0",
		"rimraf": "^5.0.1",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6"
	}
