		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"dependencies": {
		"@fastify/env": "^4.2.0",
		"dotenv": "^16.3.1",
		"fastify": "^4.19.2",
