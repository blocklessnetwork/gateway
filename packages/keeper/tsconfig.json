{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"outDir": "./build",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
